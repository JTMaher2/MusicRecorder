<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Io.Github.Jtmaher2.MusicRecorder.EditRemixPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Text="Name"></Label>
        <Entry Grid.Row="1" x:Name="remixNameEnt" Text="Remix Name"></Entry>
        
        <Button Grid.Row="6" x:Name="startRemBtn" Text="Start Remix" Clicked="startRemBtn_Clicked"></Button>
        <Button Grid.Row="7" x:Name="stopRemBtn" Text="Stop Remix" Clicked="stopRemBtn_Clicked"></Button>
        <Button Grid.Row="8" x:Name="previewRemBtn" Text="Preview Remix" Clicked="PreviewRemBtn_Clicked"></Button>
        <Button Grid.Row="9" x:Name="saveRemBtn" Text="Save Remix" Clicked="Button_Clicked" ></Button>
    </Grid>

</ContentPage>