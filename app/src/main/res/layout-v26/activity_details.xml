<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".DetailsActivity"
                                             android:id="@+id/details_constraint_layout">

    <EditText
        android:id="@+id/detailsNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="33dp"
        android:enabled="false"
        android:text="@string/name_with_colon"
        android:hint="@string/name"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.644"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/detailsComposerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/composer_with_colon"
        android:hint="@string/composer"
        app:layout_constraintEnd_toEndOf="@+id/detailsNameTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/detailsNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailsNameTextView"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/detailsNotesTextView"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/notes_with_colon"
        android:hint="@string/notes"
        app:layout_constraintBottom_toTopOf="@+id/recs_textview"
        app:layout_constraintStart_toEndOf="@+id/detailsComposerTextView"
        app:layout_constraintStart_toStartOf="@+id/detailsComposerTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailsComposerTextView"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:inputType="text"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/detailsFavoriteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:text="@string/favorite_recording_with_colon"
        app:layout_constraintStart_toStartOf="@+id/detailsRatingBar"
        app:layout_constraintTop_toBottomOf="@+id/detailsRatingBar" />

    <Button
        android:id="@+id/new_rec_btn_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/new_recording"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/detailsFavoriteStar"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/detailsFavoriteTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailsFavoriteTextView" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/edit"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/remix_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_orange_light"
        android:text="@string/remix"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/detailsComposerTextView"
        app:layout_constraintTop_toBottomOf="@+id/edit_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/details"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/recs_textview"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="56dp"
        android:text="@string/recordings"
        app:layout_constraintEnd_toEndOf="@+id/detailsNotesTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/detailsNotesTextView"
        app:layout_constraintStart_toStartOf="@+id/detailsNotesTextView"
        app:layout_constraintTop_toBottomOf="@+id/detailsNotesTextView" />

    <Spinner
        android:id="@+id/recs_spinner"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/detailsRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/recs_textview"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/recs_textview"
        app:layout_constraintTop_toBottomOf="@+id/recs_textview"
        app:layout_constraintVertical_bias="0.0" />

    <RatingBar
        android:id="@+id/detailsRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="511dp"
        app:layout_constraintEnd_toEndOf="@+id/recs_spinner"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/recs_spinner"
        app:layout_constraintTop_toBottomOf="@+id/recs_spinner"/>

    <io.github.jtmaher2.pianorepertoireapp.CustomRatingBar
        android:id="@+id/detailsFavoriteStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:numStars="1"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/detailsRatingBar"
        app:layout_constraintEnd_toEndOf="@+id/detailsRatingBar"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toEndOf="@+id/detailsFavoriteTextView"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recs_spinner"
        app:layout_constraintTop_toBottomOf="@+id/remix_btn"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/del_rec_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/recs_spinner"
        app:layout_constraintTop_toBottomOf="@+id/play_btn"
        app:layout_constraintVertical_bias="0.088" />
</android.support.constraint.ConstraintLayout>